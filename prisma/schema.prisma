generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  uuid         String    @id @default(uuid())
  full_name    String
  gender       String
  email        String
  password     String
  phone_number String?
  birth_day    DateTime?
  age          Int?
  location     String?
  occupation   String?
  created_date DateTime  @default(now())
  companies    Company[]
}

model Company {
  id            String        @id @default(uuid())
  image_url     String        @db.VarChar(1000)
  name          String        @unique
  founded_date  DateTime
  description   String
  location      String
  industry_tags IndustryTag[]
  remain_jobs   Int
  company_size  Int
  contact_link  Contact[]
  user          User          @relation(fields: [created_by_id], references: [uuid])
  created_by_id String
  created_date  DateTime      @default(now())

  @@index([created_by_id])
}

model IndustryTag {
  id        Int       @id @default(autoincrement())
  name      String
  companies Company[]
}

model Contact {
  id          Int       @id @default(autoincrement())
  contact_url String
  companies   Company[]
}
